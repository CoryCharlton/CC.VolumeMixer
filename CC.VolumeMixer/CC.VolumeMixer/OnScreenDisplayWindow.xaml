<Window x:Class="CC.VolumeMixer.OnScreenDisplayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:CC.VolumeMixer.Controls" AllowsTransparency="True" Focusable="False" Height="396" IsTabStop="False" 
        Title="CC.Volume Mixer [On Screen Display]"  Width="739" 
        IsHitTestVisible="False" ResizeMode="NoResize" ShowInTaskbar="False" 
        Topmost="True" WindowStartupLocation="CenterScreen" WindowState="Maximized" 
        WindowStyle="None" >
    
    <Window.Background>
        <SolidColorBrush />
    </Window.Background>
    
    <Grid Name="LayoutRoot">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="500"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
    
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="90"></RowDefinition>
        </Grid.RowDefinitions>

        <Controls:VolumeBar x:Name="VolumeBar" Grid.Column="1" Grid.Row="1"></Controls:VolumeBar>
    </Grid>
</Window>
